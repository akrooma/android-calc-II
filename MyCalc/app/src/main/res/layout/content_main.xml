<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#313131"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textViewEntryBox"
            style="@style/textview_inputbox"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/button1"
            style="@style/button_calc"
            android:onClick="buttonClicked"
            android:text="1"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button2"
            style="@style/button_calc"
            android:layout_alignTop="@id/button1"
            android:layout_toRightOf="@id/button1"
            android:onClick="buttonClicked"
            android:text="2"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button3"
            style="@style/button_calc"
            android:layout_alignTop="@id/button2"
            android:layout_toRightOf="@id/button2"
            android:onClick="buttonClicked"
            android:text="3"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/buttonSub"
            style="@style/button_calc"
            android:layout_alignTop="@id/button3"
            android:layout_toRightOf="@id/button3"
            android:onClick="buttonClicked"
            android:text="-"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button4"
            style="@style/button_calc"
            android:layout_below="@id/button1"
            android:onClick="buttonClicked"
            android:text="4"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button5"
            style="@style/button_calc"
            android:layout_alignTop="@id/button4"
            android:layout_toRightOf="@id/button4"
            android:onClick="buttonClicked"
            android:text="5"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button6"
            style="@style/button_calc"
            android:layout_alignTop="@id/button5"
            android:layout_toRightOf="@id/button5"
            android:onClick="buttonClicked"
            android:text="6"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/button_calc"
            android:layout_below="@id/buttonSub"
            android:layout_toRightOf="@id/button6"
            android:onClick="buttonClicked"
            android:text="+"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button7"
            style="@style/button_calc"
            android:layout_below="@id/button4"
            android:onClick="buttonClicked"
            android:text="7"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button8"
            style="@style/button_calc"
            android:layout_alignTop="@id/button7"
            android:layout_toRightOf="@id/button7"
            android:onClick="buttonClicked"
            android:text="8"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button9"
            style="@style/button_calc"
            android:layout_alignTop="@id/button8"
            android:layout_toRightOf="@id/button8"
            android:onClick="buttonClicked"
            android:text="9"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/buttonDiv"
            style="@style/button_calc"
            android:layout_below="@id/buttonAdd"
            android:layout_toRightOf="@id/button9"
            android:onClick="buttonClicked"
            android:text="/"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/buttonC"
            style="@style/button_calc"
            android:layout_below="@id/button7"
            android:onClick="buttonClicked"
            android:text="C"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/button0"
            style="@style/button_calc"
            android:layout_alignTop="@id/buttonC"
            android:layout_toRightOf="@id/buttonC"
            android:onClick="buttonClicked"
            android:text="0"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/button_calc"
            android:layout_alignTop="@id/button0"
            android:layout_toRightOf="@id/button0"
            android:onClick="buttonClicked"
            android:text="."
            app:layout_heightPercent="25%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/buttonMult"
            style="@style/button_calc"
            android:layout_below="@id/buttonDiv"
            android:layout_toRightOf="@id/buttonDot"
            android:onClick="buttonClicked"
            android:text="*"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/button_calc"
            android:layout_below="@id/buttonMult"
            android:layout_toRightOf="@id/buttonDot"
            android:onClick="buttonClicked"
            android:text="="
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

    </android.support.percent.PercentRelativeLayout>

</LinearLayout>
